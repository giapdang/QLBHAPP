<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:layout_marginStart="28dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/back"/>
  <ImageView
    android:id="@+id/imageView7"
    android:layout_width="314dp"
    android:layout_height="328dp"
    android:layout_marginTop="84dp"
    android:layout_marginStart="48dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/mypassword"/>
  <TextView
    android:id="@+id/textView15"
    android:textStyle="bold"
    android:layout_width="182dp"
    android:layout_height="79dp"
    android:layout_marginTop="440dp"
    android:layout_marginStart="52dp"
    android:text="Bạn quên mật khẩu à?"
    android:textAlignment="viewStart"
    android:textSize="25sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/textView16"
    android:layout_width="317dp"
    android:layout_height="72dp"
    android:layout_marginTop="516dp"
    android:layout_marginStart="52dp"
    android:text="Đừng quá lo lắng! Chúng tôi ở đây là để giúp bạn.  Bạn hãy nhập email của bạn để bắt đầu quá trình đặt lại mật khẩu."
    android:textAlignment="viewStart"
    android:textSize="17sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <EditText
    android:id="@+id/email"
    android:textStyle="bold"
    android:layout_width="317dp"
    android:layout_height="61dp"
    android:layout_marginTop="640dp"
    android:layout_marginStart="52dp"
    android:ems="10"
    android:hint="Nhập email của bạn"
    android:inputType="textEmailAddress"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/btndoipass"
    android:textStyle="bold"
    android:layout_width="197dp"
    android:layout_height="68dp"
    android:layout_marginTop="744dp"
    android:layout_marginStart="120dp"
    android:backgroundTint="#3a596b"
    android:text="Xác minh tài khoản"
    android:textAlignment="center"
    android:textSize="17sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>